package tacos.data;

import java.util.Optional;

import tacos.Ingredient;

//ingredient Repository  interface with methods to be used for querying
public interface IngredientRepository {

  //findAll() queries for all Ingredient objects into a collection
  Iterable<Ingredient> findAll();
  
  //findById() queries for an Ingredient by the id
  Optional<Ingredient> findById(String id);
  
  Ingredient save(Ingredient ingredient);
  
}
